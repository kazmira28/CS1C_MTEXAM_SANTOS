const groceryList = [
    { id: 1, name: "Apples", category: "Fruits", quantity: 5, price: 2.5 },
    { id: 2, name: "Bananas", category: "Fruits", quantity: 6, price: 1.2 },
    { id: 3, name: "Carrots", category: "Vegetables", quantity: 4, price: 1.0 },
    { id: 4, name: "Milk", category: "Dairy", quantity: 1, price: 3.5 },
    { id: 5, name: "Bread", category: "Bakery", quantity: 2, price: 2.0 },
    { id: 6, name: "Eggs", category: "Dairy", quantity: 12, price: 4.0 },
    { id: 7, name: "Chicken Breast", category: "Meat", quantity: 2, price: 8.0 },
    { id: 8, name: "Rice", category: "Grains", quantity: 1, price: 5.0 }
];

// Function to display grocery list in a table format
function displayGroceryTable() {
    console.log("ID | Name           | Category    | Quantity | Price ($)");
    console.log("-------------------------------------------------------");
    groceryList.forEach(item => {
        console.log(
            `${item.id.toString().padEnd(2)} | ${item.name.padEnd(14)} | ${item.category.padEnd(10)} | ${item.quantity.toString().padEnd(8)} | ${item.price.toFixed(2)}`
        );
    });
}

displayGroceryTable();
